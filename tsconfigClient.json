{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./src",
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "paths": {
      "@/*": ["*"]
    }
  }
}
